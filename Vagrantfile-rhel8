vm_box = "generic/rhel8"
internal_ram = 512
internal_net = "192.168.56."
internal_dns = internal_net + "1"
internal_gateway = internal_net + "1"
domain = ".example.com"

total_machines = 2

Vagrant.configure(2) do |config|
    # servers.each do |machine|
	(1..total_machines).each do |i|
		machine_name = "server#{i}"
		machine_ssh_port = "10#{i}22"
		machine_ip = internal_net + "2#{i}0/24"
		machine_hostname = machine_name + domain
        config.vm.define machine_name do |node|
            node.vm.box = vm_box
			node.vm.hostname = machine_hostname
			node.vm.network "private_network", ip: machine_ip
            node.vm.network "forwarded_port", guest: 22, host: machine_ssh_port, auto_correct: false, id: "ssh"
            node.vm.provision "file", source: "~/.ssh/id_rsa.pub", destination: "/home/vagrant/.ssh/me.pub"
            node.vm.provision :shell, :inline => "cat /home/vagrant/.ssh/me.pub >> /home/vagrant/.ssh/authorized_keys", run: "always"
            node.vm.provision :shell, :inline => "sudo sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/g' /etc/ssh/sshd_config; sudo systemctl restart sshd;", run: "always"
			node.vm.provision "shell", run: "always", inline: "nmcli con mod \"System eth0\" con-name eth0"
			node.vm.provision "shell", run: "always", inline: "nmcli con mod \"Wired connection 1\" con-name eth1"
            node.vm.provision "shell", run: "always", inline: "nmcli con mod eth1 ipv4.addresses " + machine_ip
            node.vm.provision "shell", run: "always", inline: "nmcli con mod eth1 ipv4.gateway " + internal_gateway + " ipv4.method manual ipv4.dns " + internal_dns 
			node.vm.provision "shell", run: "always", inline: "nmcli con down eth1; nmcli con up eth1"
			#config.vm.provision "shell", path: "bootstrap.sh"
			# node.ssh.insert_key = false
            node.vm.provider :virtualbox do |vb|
				#vb.gui = true
                vb.name = machine_hostname
                vb.customize ["modifyvm", :id, "--memory", internal_ram]
				vb.customize ['modifyvm', :id, '--cableconnected1', 'on']
				vb.customize ["modifyvm", :id, "--uart1", "0x3F8", "4"]
				vb.customize ["modifyvm", :id, "--uartmode1", "file", "./ttyS0.log"]
            end
        end
    end
end
